<% if user_signed_in? %>
  <% if current_user.chooses.find_by(book_id: book.id) %>
    <%= link_to book_choose_path(choose, book_id: book.id), method: :delete, id: "chooses-button-#{book.id}", remote: true do %>
      <i class="fa fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to book_chooses_path(book), id: "chooses-button-#{book.id}", method: :post, remote: true do %>
      <i class="fa fa-heart-o"></i>
    <% end %>
  <% end %>
<% else %>
  <i class="fa fa-heart-o"></i>
<% end %>
