<div class="set" style="text-align:center;">
  <h1>カテゴリ一覧</h1>
  <div class="row">

    <% Category.all.each do |category| %>
      <div class="columns medium-6" align="center" style="margin-top: 100px;">

          <a href="<%= categories_index_path(id: category.id) %>" class="circle">
            <i class="fa fa-<%= category.icon %> fa-5x"></i><br><br>
            <h3><%= category.name %></h3>
          </a>

      </div>
    <% end %>

  </div>
</div>
